<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_barun_gothic"
            android:gravity="center"
            android:text="아이디"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <View
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@color/brown" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/findPwUserIdET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/style_rounded_login"
                android:fontFamily="@font/nanum_barun_gothic"
                android:gravity="center"
                android:hint="아이디를 입력해주세요."
                android:textColor="@color/black"
                android:digits="@string/text_id"
                android:maxLength="15"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/findPwValidateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_register_not_check" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/findPwUserIdNullTV"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/nanum_square"
        android:text="가입되지 않은 아이디입니다. 아이디를 확인해주세요"
        android:textColor="#FF0000"
        android:textSize="11sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/findPwValidateCheckFalseTV"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/nanum_square"
        android:text="아이디가 존재하는지 확인해주세요!"
        android:textColor="#FF0000"
        android:textSize="11sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/findPwValidateCheckTV"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nanum_square"
        android:text="입력 후 아이디가 존재하는지 확인해주세요."
        android:textColor="@color/gray"
        android:textSize="10sp" />
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_barun_gothic"
            android:gravity="center"
            android:text="이름"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <View
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@color/brown" />

        <EditText
            android:id="@+id/findPwUserNameET"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/style_rounded_login"
            android:fontFamily="@font/nanum_barun_gothic"
            android:gravity="center"
            android:hint="이름을 입력해주세요."
            android:inputType="text"
            android:maxLength="15"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_barun_gothic"
            android:gravity="center"
            android:text="이메일"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <View
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@color/brown" />

        <EditText
            android:id="@+id/findPwEmailET"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/style_rounded_login"
            android:fontFamily="@font/nanum_barun_gothic"
            android:gravity="center"
            android:hint="이메일을 입력해주세요."
            android:inputType="textEmailAddress"
            android:maxLength="35"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/findPwCheckTV"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/nanum_square"
        android:text="비어있는 항목이 있어요! 모두 입력해주세요."
        android:textColor="#FF0000"
        android:textSize="11sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/findPwButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/style_rounded_postive_button"
        android:fontFamily="@font/nanum_square_eb"
        android:text="비밀번호 찾기"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>