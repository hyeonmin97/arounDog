<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/edit_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/brown">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_square_eb"
            android:text="강아지 정보 수정"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_barun_gothic"
            android:gravity="center"
            android:text="이름"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <View
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@color/brown" />

        <EditText
            android:id="@+id/editDogName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/style_rounded_login"
            android:fontFamily="@font/nanum_barun_gothic"
            android:gravity="center"
            android:hint="이름을 입력해주세요."
            android:inputType="text"
            android:maxLength="15"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_barun_gothic"
            android:gravity="center"
            android:text="성별"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <View
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@color/brown" />

        <RadioGroup
            android:id="@+id/editDogGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/editDogMan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="수컷"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/editDogWoman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="암컷"
                android:textSize="16sp" />
        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_barun_gothic"
            android:gravity="center"
            android:text="나이"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <View
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@color/brown" />


        <EditText
            android:id="@+id/editDogAge"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/style_rounded_login"
            android:digits="0123456789"
            android:fontFamily="@font/nanum_barun_gothic"
            android:gravity="center"
            android:hint="나이를 입력해주세요"
            android:inputType="number"
            android:maxLength="35"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_barun_gothic"
            android:gravity="center"
            android:text="키(cm)"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <View
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@color/brown" />


        <EditText
            android:id="@+id/editDogHeight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/style_rounded_login"
            android:digits="0123456789"
            android:fontFamily="@font/nanum_barun_gothic"
            android:gravity="center"
            android:hint="키를 입력해주세요."
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_barun_gothic"
            android:gravity="center"
            android:text="몸무게(kg)"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <View
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@color/brown" />


        <EditText
            android:id="@+id/editDogWeight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/style_rounded_login"
            android:digits="0123456789"
            android:fontFamily="@font/nanum_barun_gothic"
            android:gravity="center"
            android:hint="몸무게를 입력해주세요."
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_barun_gothic"
            android:gravity="center"
            android:text="종"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <View
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@color/brown" />


        <TextView
            android:id="@+id/editDogBreed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/style_rounded_login"

            android:gravity="center"
            android:text="종"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/editDogCheck"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/nanum_square"
        android:text="비어있는 항목이 있어요! 모두 입력해주세요."
        android:textColor="#FF0000"
        android:textSize="11sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/editDogUpdate"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/style_rounded_postive_button"
        android:fontFamily="@font/nanum_square_eb"
        android:text="수정완료"
        android:textColor="@color/white"
        android:textStyle="bold" />


</LinearLayout>